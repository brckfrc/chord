# Chord Backend - Environment Variables Template
# Copy this file to .env and update with your values

# SQL Server Configuration
SQL_SA_PASSWORD=YourStrongPasswordHere!Change123
SQL_SERVER_HOST=localhost
SQL_SERVER_PORT=1433
DATABASE_NAME=ChordDB

# Redis Configuration
REDIS_CONNECTION=localhost:6379

# JWT Configuration
JWT_SECRET=YourJWTSecretKeyAtLeast32CharactersLong!
JWT_ISSUER=ChordAPI
JWT_AUDIENCE=ChordClient
JWT_EXPIRY_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRY_DAYS=7

# CORS (Frontend URLs - comma separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# MinIO Configuration (Object Storage for File Uploads)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=chord-uploads
MINIO_USE_SSL=false
MINIO_PUBLIC_ENDPOINT=http://localhost:9000
